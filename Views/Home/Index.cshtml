@{
    ViewData["Title"] = "Home Page";
}
@section Scripts
    {
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.bootstrap4.min.css">
    <script type="text/javascript" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script type="text/javascript" src="~/lib/bootbox.js/bootbox.min.js"></script>
    <script type="text/javascript">
        $.fn.dataTable.Api.register('sum()', function () {
            var sum = 0;

            for (var i = 0, ien = this.length; i < ien; i++) {
                sum += this[i];
            }

            return sum.toFixed(2);
        });
    
        $(document).ready(function () {
            $('#expenses').DataTable({
                ajax: {
                    url: "/api/expenses/",
                    method: 'POST',
                    dataSrc: ""
                },
                columns: [
                    { data: "expenseDate", className: "text-center align-middle" },
                    { data: "customer", className: "align-middle" },
                    { data: "project", className: "align-middle" },
                    { data: "amount", render: $.fn.dataTable.render.number(',', '.', 2, '$'), className: "text-right align-middle" },
                    {
                        data: "id",
                        render: function (data) { return "<a href='/api/expenses/" + data + "' class='btn btn-info pull-left' role='button'>Edit</a><button class='btn round btn-danger js-delete' data-expense-id=" + data + ">Delete</button>"; }, className: "text-center"
                    },
                ],
                paging: false,
                filter: false,
                order: [[2, 'desc']],
                ordering: true,
                columnDefs: [
                    { targets: 'no-sort', orderable: false }
                ],
                drawCallback: function () {
                    var api = this.api();
                    $(api.table().column(3).footer()).html(
                        '$' + api.column(3).data().sum()
                    );
                }
            });

            //deleteFunction
            $("#expenses").on("click", " .js-delete", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this expense record?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/expenses/" + button.attr("data-expense-id"),
                            method: "DELETE",
                            success: function(){
                                button.parents("tr").remove();
                            }
                        });

                    }
            });
            });

        });

        
    </script>
}
<div class="container">
    <div class=" dt-head-nowrap">
        <h2>Expenses</h2>
        <div class="col-md-12">
            <p> <h4>Select an expense from the listing to edit or click "Add" to create a new Expense </h4></p>
        </div>
        <div class="col-md-12">
            <form class="seachFrom">
                <p>
                    <input type="text" id="seachInput" name="SearchString" />
                    <input type="submit" value="Filter" />
                </p>
            </form>
        </div>
    </div>

    <div>
        
        <table id="expenses" class="table table-striped table-bordered hover" style="width:75%">
            <thead>
                <tr>
                    <th class="col-md-1 text-center">Date</th>
                    <th class="col-md-4 text-center">Customer</th>
                    <th class="col-md-4 text-center">Project</th>
                    <th class="col-md-1 text-right">Amount</th>
                    <th class="no-sort col-md-2 text-center">Action</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th colspan="2"></th>
                    <th>Total</th>
                    <th></th>
                    <th></th>

                </tr>
            </tfoot>
        </table>
    </div>
</div>